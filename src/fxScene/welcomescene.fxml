<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.WelcomeSceneController">
   <children>
      <VBox prefHeight="768.0" prefWidth="1366.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="156.0" prefWidth="1920.0" text="Welcome to Newton's Laws Demonstration App" textAlignment="CENTER" textFill="#e12e2b">
               <font>
                  <Font name="Book Antiqua" size="60.0" />
